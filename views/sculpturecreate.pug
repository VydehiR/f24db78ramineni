extends layout

block content
  h1= title
  form(id='SculptureForm', action="/resource/sculptures", method="POST")
    div.form-group
      label.sculptureAttr(for='sculpture_name') Sculpture Name
      input#sculpture_name(type='text', name='sculpture_name')
    div.form-group
      label.sculptureAttr(for='year') Year
      input#year(type='number', name='year')
    div.form-group
      label.sculptureAttr(for='artist') Artist
      input#artist(type='text', name='artist')
    input(type="submit")
  script.
    document.forms['SculptureForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target))
      }).then((resp) => {
        return resp.json();
      }).then((body) => {
        alert("Save succeeded");
      }).catch((error) => {
        alert("Save failed " + error);
      });
    });
