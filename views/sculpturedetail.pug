extends layout

block content
  h1= title
  div.container
    div.row
      div.col-md-4.font-weight-bold Sculpture ID:
      div.col-md-8.text-info #{toShow._id}
    div.row
      div.col-md-4.font-weight-bold Sculpture Name:
      div.col-md-8.text-info #{toShow.sculpture_name}
    div.row
      div.col-md-4.font-weight-bold Material:
      div.col-md-8.text-info #{toShow.sculpture_material}
    div.row
      div.col-md-4.font-weight-bold Height:
      div.col-md-8.text-info #{toShow.sculpture_height} cm
  a.btn.btn-primary.mt-4(href='/sculptures') Back to List
