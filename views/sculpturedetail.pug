extends layout

block content
    h1 Sculpture Detail

    if (toShow == null)
        h2 No instance found
    else
        - let sculptureid = toShow._id
        - let name = toShow.name
        - let sculpturesartist = toShow.artist
        - let sculpturesyear = toShow.year

        div(class="mb-3")
            div.row.mb-2
                div(class='sculptureAttr mr-3 font-weight-bold') Sculpture ID:
                div #{sculptureid}
            div.row.mb-2
                div(class='sculptureAttr mr-3 font-weight-bold') Sculpture Name:
                div #{name}
            div.row.mb-2
                div(class='sculptureAttr mr-3 font-weight-bold') Sculpture Year:
                div #{sculpturesyear}
            div.row.mb-2
                div(class='sculptureAttr mr-3 font-weight-bold') Sculpture Artist:
                div #{sculpturesartist}

        button(class="btn btn-secondary mt-3" onclick="goBack()") Go Back

    script.
        function goBack() {
            window.location.href = "/sculptures";
        }
