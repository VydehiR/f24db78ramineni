extends layout
block content
    h1 Sculpture Delete
    if (toShow == null)
        h2 No instance to delete
    else
        - let sculptureid = toShow._id
        - let name = toShow.name
        - let sculpturesartist = toShow.artist
        - let sculpturesyear = toShow.year
        - let actionid = "/resource/sculptures/" + sculptureid
        
        script let actionid = "#{actionid}"
        div
            div.row
                div(class='sculptureAttr mr-3') Sculpture ID is:
                div #{sculptureid}
            div.row
                div(class='sculptureAttr mr-3') Sculpture Name is:
                div #{name}
            div.row
                div(class='sculptureAttr mr-3') Sculpture Year is:
                div #{sculpturesyear}
            div.row
                div(class='sculptureAttr mr-3') Sculpture Artist is:
                div #{sculpturesartist}
                
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

    script.
        function cancel() {
        // Go back to the home page for the sculptures collection
        window.location.href='/sculptures'
        }

    script.
        function deleteOnid() {
            console.log("starting delete")
            // delete first
            fetch(actionid, {
                method: 'DELETE' // Don't need a body for the delete
            }).then((resp) => {
                return resp.json(); // or resp.text() or whatever the server sends
            }).then((body) => {
                alert("Delete succeeded")
                window.location.href='/sculptures'
            // TODO handle body
            }).catch((error) => {
            // TODO handle error
                alert("Delete failed " + error )
            });
        }
